<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaFilmesTentarNovamente">

        <TextView
            android:id="@+id/tvMensagemErro"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="@string/impossivel_conectar_internet"
            android:textSize="@dimen/tvTextSizeH2"

            app:layout_constraintBottom_toTopOf="@+id/ivWarn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivWarn"
            android:layout_width="0dp"
            android:layout_height="300dp"

            android:src="@drawable/ic_baseline_warning_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTentarNovamente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/tentar_novamente"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivWarn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
